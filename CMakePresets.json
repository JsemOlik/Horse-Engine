{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HORSE_UNITY_BUILD": "ON",
        "HORSE_ENABLE_LTO": "OFF",
        "HORSE_WARNINGS_AS_ERRORS": "OFF"
      }
    },
    {
      "name": "DevRelease",
      "displayName": "DevRelease (with debug info)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "HORSE_UNITY_BUILD": "ON",
        "HORSE_ENABLE_LTO": "OFF",
        "HORSE_WARNINGS_AS_ERRORS": "ON"
      }
    },
    {
      "name": "Shipping",
      "displayName": "Shipping (optimized)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "HORSE_UNITY_BUILD": "ON",
        "HORSE_ENABLE_LTO": "ON",
        "HORSE_WARNINGS_AS_ERRORS": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "configurePreset": "Debug"
    },
    {
      "name": "DevRelease",
      "configurePreset": "DevRelease"
    },
    {
      "name": "Shipping",
      "configurePreset": "Shipping"
    }
  ]
}
